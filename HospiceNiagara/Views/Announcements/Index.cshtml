@model HospiceNiagara.Models.Announcement
@{
    ViewBag.Title = "Announcements";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<div class="col-md-12">
    <h2>Announcements</h2>
    @*@Html.AntiForgeryToken()*@
    @*[ANCMT]*@
    <div class="panel panel-default col-lg-6">
        <!-- Default panel contents -->
        <div class="panel-heading">
            Announcements <span class="badge">3</span>
            <button type="button" class="btn btn-link" data-toggle="modal" data-target="#modalAnnouncement">
                Add...
            </button>
            
            <div class="modal fade" id="modalAnnouncement" tabindex="-1" role="dialog" aria-labelledby="myModalAnnouncement" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title">Add New Announcement</h4>
                        </div>
                        @using (Html.BeginForm("Create", "Announcements", FormMethod.Post, new { enctype = "multipart/form-data" })){
                            <style>
                                div {
                                    color: black;
                                }
                            </style>
                            <div class="modal-body">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group row">
                                    @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-lg-2" })
                                    <div class="col-lg-10 col-md-push-1">
                                        @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter text here..." } })
                                        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <h6>Attach a Resource:</h6>
                                <div class="form-group row">
                                    <label class="control-label col-md-2">Resource Description</label>
                                    <div class="col-md-10">
                                        @Html.Editor("ResourceDescription", new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter resource description" } })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-1">Resource Category</label>
                                    <div class="col-md-10 col-md-push-1">
                                        @Html.DropDownList("ResourceCategoryID", (SelectList)ViewBag.ResourceCategoryID, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    @Html.Label("Upload", htmlAttributes: new { @class = "control-label col-md-1" })
                                    <div class="col-md-10 col-md-push-1">
                                        <input class="form-control" type="file" name="FileUpload1" />
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default">Add</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        }
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        </div>
        <div class="panel-body">
            <!-- Modal -->
            <div id="announceList">
                @Html.Partial("_AnnounceList")
            </div>
        </div>
    </div>
    <div class="panel panel-default col-lg-6">
        <!-- Default panel contents -->
        <div class="panel-heading">
            Announcement Title
        </div>
        <div class="panel-body">
            @Html.Partial("_Details")
        </div>
    </div>
</div>


