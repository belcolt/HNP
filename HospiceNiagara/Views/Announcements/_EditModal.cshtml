@model HospiceNiagara.Models.Announcement
@*@using (Ajax.BeginForm("Edit", "Announcements", new AjaxOptions { UpdateTargetId = "_AnnounceList", InsertionMode = InsertionMode.Replace, HttpMethod = "Post" }))*@

<style>
    div {
        color: black;
    }
</style>

@Scripts.Render("~/bundles/jqueryval")
<div class="modal fade" id="modalEditAnmt" tabindex="-1" role="dialog" aria-labelledby="myModalEditAnmt" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Edit Announcement</h4>
            </div>
            <div class="modal-body">
            @using (Ajax.BeginForm(null, null, new AjaxOptions { HttpMethod = "Post", InsertionMode = InsertionMode.Replace }, new { enctype = "multipart/form-data"}))
            {
                @*@Html.AntiForgeryToken()*@
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)
                @Html.HiddenFor(model => model.Date)
                @Html.HiddenFor(model => model.ResourceID)
                <div class="form-group row">
                    @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10 col-md-push-1">
                        @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                    </div>
                </div>
                <h6>Attach a Resource:</h6>
                <div class="form-group row">
                    <label class="control-label col-md-2">Resource Description</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Resource.FileDesc, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter resource description" } })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-1">Resource Category</label>
                    <div class="col-md-10 col-md-push-1">
                        @Html.DropDownList("ResourceCategoryID", (SelectList)ViewBag.ResourceCategories, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-1">Attached File(s)</label>
                    <div class="col-md-10 col-md-push-1">
                        @Html.ActionLink(Model.Resource.FileStore.FileName, "Download", new { id = Model.Resource.FileStoreID })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            }
            </div>
                    
            
        </div>
    </div><!-- /.modal-content -->
</div>
