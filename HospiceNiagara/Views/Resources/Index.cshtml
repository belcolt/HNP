                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @*[STF_RSC]*@
        <div role="tabpanel" class="tab-pane" id="StfRsrc">
            
            <div class="row">
                @Html.Partial("_StaffIndexTab")
            </div>

            <div class="row">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="panel-title">Staff Related Links</h1>
                    </div>
                    <div class="panel-body">
                        <div class="list-group">
                            <a href="http://www.infoanywhere.com" class="list-group-item">InfoAnywhere</a>
                            <a href="https://css.hr.ccim.on.ca/HospiceNiagara" class="list-group-item">QHR Net</a>
                            <a href="https://portal.microsoftonline.com" class="list-group-item">Office 365 Web Login</a>
                            <a href="http://www.greenshield.ca" class="list-group-item">Green Shield (Group Plan Benefits)</a>
                            <a href="http://sumac.com/training/" class="list-group-item">Sumac Training</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @*[BRD_RSC]*@
        <div role="tabpanel" class="tab-pane" id="BrdRsrc">
            <div class="row">
                @Html.Partial("_BoardIndexTab")
            </div>
        </div>

        <div role="tabpanel" class="tab-pane" id="VlntRsrc">
            <div class="row">
                @Html.Partial("_VolunteerIndexTab")
            </div>
        </div>
 
        
    </div>
</div>

