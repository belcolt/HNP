@{
    ViewBag.Title = "Resources";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @*SRCH]*@
    <div class="col-lg-offset-1">
        @*<div class="input-group">
            <span class="input-group-btn">
                <button class="btn btn-default" type="button">Go!</button>
            </span>
            <input type="text" class="form-control" placeholder="Search for a resource...">*@
        @*</div>*@<!-- /input-group -->
        @Html.ActionLink("Add Resource","Create")
    </div>
</div><!-- /.row -->
<br />    
<div role="tabpanel">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#AllRsrc" aria-controls="AllRsrc" role="tab" data-toggle="tab">All Resources</a></li>
        <li role="presentation"><a href="#OrgRsrc" aria-controls="OrgRsrc" role="tab" data-toggle="tab">Organizational Resources</a></li>
        @* Only Admin and Staff members can see this. *@
        <li role="presentation"><a href="#StfRsrc" aria-controls="StfRsrc" role="tab" data-toggle="tab">Staff Resources</a></li>
        @* Only Admin, Board and Staff-Leadership members can see this. *@
        <li role="presentation"><a href="#BrdRsrc" aria-controls="BrdRsrc" role="tab" data-toggle="tab">Board Resources</a></li>
        <li role="presentation"><a href="#VlntRsrc" aria-controls="VlntRsrc" role="tab" data-toggle="tab">Volunteer Resources</a></li>
        
        
    </ul>

    <div class="row">

        <!-- Modal -->
        <div class="modal fade" id="modalOrgRsrc" tabindex="-1" role="dialog" aria-labelledby="myModalOrgRsrc" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Add, Remove, or Edit Resource(s)</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <!-- Single button -->
                            <div class="btn-group col-lg-3">
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    Select Type <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">Form</a></li>
                                    <li><a href="#">Strategic Plan</a></li>
                                    <li><a href="#">Quality Improvement Plan</a></li>
                                    <li><a href="#">Memo</a></li>
                                    <li><a href="#">Event</a></li>
                                    <li><a href="#">Hospice Niagara Site</a></li>
                                    <li><a href="#">Community Partner Site</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Add New Type...</a></li>
                                </ul>
                            </div>
                            <button type="button" class="btn btn-default col-lg-2">Attach file</button>
                            <div class="input-group col-lg-6">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                    </button>
                                </span>
                                <input type="text" class="form-control" placeholder="Enter file title/description here...">
                            </div><!-- /input-group -->
                        </div>
                        <br />
                        <div class="row">
                            <!-- Single button -->
                            <div class="btn-group col-lg-2">
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    Form <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">Form</a></li>
                                    <li><a href="#">Strategic Plan</a></li>
                                    <li><a href="#">Quality Improvement Plan</a></li>
                                    <li><a href="#">Memo</a></li>
                                    <li><a href="#">Event</a></li>
                                    <li><a href="#">Hospice Niagara Site</a></li>
                                    <li><a href="#">Community Partner Site</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Add New Type...</a></li>
                                </ul>
                            </div>
                            <div class="input-group col-lg-6">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                    </button>
                                </span>
                                <input type="text" class="form-control" value="Health and Safety">
                            </div><!-- /input-group -->
                        </div>
                        <div class="row">
                            <!-- Single button -->
                            <div class="btn-group col-lg-2">
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    Memo <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">Form</a></li>
                                    <li><a href="#">Strategic Plan</a></li>
                                    <li><a href="#">Quality Improvement Plan</a></li>
                                    <li><a href="#">Memo</a></li>
                                    <li><a href="#">Event</a></li>
                                    <li><a href="#">Hospice Niagara Site</a></li>
                                    <li><a href="#">Community Partner Site</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Add New Type...</a></li>
                                </ul>
                            </div>
                            <div class="input-group col-lg-6">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                    </button>
                                </span>
                                <input type="text" class="form-control" value="Memo">
                            </div><!-- /input-group -->
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default">Save</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </div>

    @*[ORG_RSC]*@
    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="AllRsrc">
            <div class="row">
                @Html.Partial("_AllResourcesIndexTab")
            </div>
        </div>
        <div role="tabpanel" class="tab-pane" id="OrgRsrc">
            
