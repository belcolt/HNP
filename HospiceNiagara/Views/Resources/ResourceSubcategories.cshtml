@model IEnumerable<HospiceNiagara.Models.ResourceSubCategory>

@{
    ViewBag.Title = "ResourceSubcategories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Resource Subcategories</h2>

<p>
    @Html.ActionLink("Back To Category Index", "ResourceCategoryIndex")
    @Html.ActionLink("Create New", "Create")
</p>
@Html.Raw(ViewBag.Message)
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ResourceCategory.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ResourceCategory.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
