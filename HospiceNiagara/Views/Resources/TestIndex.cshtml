@model IEnumerable<HospiceNiagara.Models.Resource>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Description
        </th>
        <th>
            Resource Category
        </th>
        <th>
            File
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelitem=> item.FileDesc)
            <td>
                @Html.DisplayFor(modelItem => item.ResourceCategory.Name)
            </td>
            <td>
                @Html.ActionLink(@item.FileStore.FileName.ToString(), "Download", new { @id = @item.FileStoreID })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>

