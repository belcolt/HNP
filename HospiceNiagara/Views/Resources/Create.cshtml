@model HospiceNiagara.Models.Resource

@{
    ViewBag.Title = "Create";
    @Scripts.Render("~/Scripts/SiteControls.js")
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Resources", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Resource</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.FileDesc, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FileDesc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FileDesc, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="ddlDoms">Resource Category</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ResourceCategoryID, (SelectList)ViewBag.ResourceCategoryID, htmlAttributes: new { id = "resCatDD" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="ddlDoms">Resource SubCategory</label>
            <div class="col-md-10">
                <select name="ResourceSubCategoryID" id="resSubCatDD">
                    <option value="-1">No Subcategory</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="FileUpload1">Attach File:</label>
            <input class="form-control" type="file" name="FileUpload1" /><br />
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>