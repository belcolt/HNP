@model IEnumerable<HospiceNiagara.Models.AllContactViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Contacts</h2>

@using (Html.BeginForm())
    {
        <table>
            <tr>
                <td>Select by Team: </td>
                <td>@Html.DropDownList("TeamDomainID", null, "All Teams", htmlAttributes: new { @class = "form-control" })</td>
