            <div class="col-md-10">
                @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
            </div>
        </div>

        <h4>Invitations</h4>
        <div class="form-group">
            <label class="control-label col-md-2">Team to add</label>
            <div class="col-md-10">
                @Html.DropDownList("ContactsAddID", null, "All Teams", htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group" id="someDiv">

        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Current invitations</label>
            <div class="col-md-10">
                @Html.DropDownList("ChoosenID", null, htmlAttributes: new { @class = "form-control", @multiple = "multiple" })
