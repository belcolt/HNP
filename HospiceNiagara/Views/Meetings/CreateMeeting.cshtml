@model HospiceNiagara.Models.Meeting

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm("CreateMeeting", "Meetings", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
