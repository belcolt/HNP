
@model IEnumerable<HospiceNiagara.Models.UserInviteViewModel>

<table class="table table-hover" id="eventsIndex">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.StartDate)</th>
        <th>@Html.DisplayNameFor(model => model.EndDate)</th>
        <th>@Html.DisplayNameFor(model => model.Location)</th>
        <th>RSVP</th>
    </tr>
    @if (ViewBag.UserInvitesList != null)
    {
        foreach (HospiceNiagara.Models.UserInviteViewModel item in ViewBag.UserInvitesList)
        {
            <tr>
                <td class="tdEvent">@item.Name</td>
                <td>@item.StartDate</td>
                <td>@item.EndDate</td>
                <td>@item.Location</td>
                <td><input type="button" class="btn btn-default, btnRSVP" value="@item.Attend" /><input type="hidden" value='@item.InviteID'></td>
            </tr>
        }
    }
</table>