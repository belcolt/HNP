@model HospiceNiagara.Models.EventListViewModel
    <table class="table table-hover" id="eventsIndex">
        <tr>
            <th></th>
            <th>@Html.DisplayFor(model=>model.Name)</th>
            <th>@Html.DisplayFor(model=>model.StartDate)</th>
            <th>@Html.DisplayFor(model=>model.EndDate)</th>
            <th>@Html.DisplayFor(model=>model.Location)</th>
            <th>RSVPs</th>
        </tr>
    @if (ViewBag.EventList != null)
        {
            foreach (HospiceNiagara.Models.EventListViewModel item in ViewBag.EventsList)
            { 
            <tr>
                <td><button type="button" class="btn btn-default">RSVP</button></td>
                <td>@item.Name</td>
                <td>@item.StartDate</td>
                <td>@item.EndDate</td>
                <td>@item.Location</td>
                <td><button type="button" class="btn btn-link">22</button></td>
            </tr>
        }
    }
    </table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}