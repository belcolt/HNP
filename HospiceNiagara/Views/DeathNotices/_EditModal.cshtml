@model HospiceNiagara.Models.DeathNotice
<style>
    div {
        color: black;
    }
</style>
@Scripts.Render("~/bundles/jqueryval")
<div class="modal fade" id="modalEditDN" tabindex="-1" role="dialog" aria-labelledby="myModalEditDN" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
