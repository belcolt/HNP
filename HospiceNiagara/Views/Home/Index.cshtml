@model HospiceNiagara.Models.Home

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="alert alert-info" role="alert">Welcome New Staff/Volunteer/Board member! Click <a>here</a> for some information </div>

<div class="row">
    
    
    <div class="jumbotron col-md-6">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/Content/carousel1.jpg" />
                    <div class="carousel-caption">
                        <h1>Welcome!</h1>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Content/Exterior-frontdoor.jpg" />
                    <div class="carousel-caption">
                        <p class="lead">You have successfully logged into the Hospice Niagara Portal. The various tabs at the top will take you where you want to go!</p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Content/carousel3.jpg" />
                    <div class="carousel-caption">
                    </div>
                </div>

            </div>
            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="panel panel-default col-md-6">
        <div class="panel-heading">
            <h1 class="panel-title">@Html.ActionLink("Announcements", "Index", "Announcements") @Html.Partial("_AnmtBadge")</h1>
        </div>
        <div class="panel-body">
            @Html.Partial("_AnnounceList")
        </div>
    </div>
</div>

<div class="row">
    <div class="panel panel-default col-lg-6">
        <div class="panel-heading">
            <h1 class="panel-title">@Html.ActionLink("Upcoming Events", "Index", "Meetings") <span class="badge">2</span></h1>
        </div>
        <div class="panel-body">
            @Html.Partial("_EventList")
        </div>
    </div>

    <div class="panel panel-default col-lg-6">
        <div class="panel-heading">
            <h1 class="panel-title">@Html.ActionLink("Obituary", "Index", "DeathNotices") @Html.Partial("_DNBadge")</h1>
        </div>
        <div class="panel-body">
            @Html.Partial("_DNList")
        </div>
    </div>
</div>
<div class="row">
    <hr />
    <div class="col-lg-3">
        Hospice Niagara - The Stabler Centre
        <br />403 Ontario Street, Unit 2
        <br/>St. Catharines, ON L2N 1L5
    </div>
    <div class="col-lg-2">
        Tel: 905-984-8766
        <br />Fax: 905-984-8242
        <br /><a target="_blank" href="http://www.hospiceniagara.ca">www.hospiceniagara.ca</a>
    </div>
    <div class="col-lg-2">
        <a target="_blank" href="https://www.facebook.com/pages/Hospice-Niagara/157424072710">
            <span class="fa fa-facebook-official fa-2x"></span>
        </a>
        <a target="_blank" href="https://twitter.com/HospiceNiagara">
            <span class="fa fa-twitter-square fa-2x"></span>
        </a>
        <a target="_blank" href="https://www.linkedin.com/company/hospice-niagara">
            <span class="fa fa-linkedin-square fa-2x"></span>
        </a>
    </div>
</div>



