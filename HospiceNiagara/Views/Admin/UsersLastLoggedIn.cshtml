@model IEnumerable<HospiceNiagara.Models.ApplicationUser>
@{
    ViewBag.Title = "UsersLastLoggedIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users and last logins</h2>

<table class="table table-hover">
    <tr>
        <th>User Name</th>
        <th>Last Login</th>
        <th>Total Logins</th>
    </tr>

    @foreach (var u in Model)
    {
        <tr>
            <td>@u.UserName</td>
            <td>@u.LastLoggedIn</td>
            <td>@u.Logins.Count</td>
        </tr>
    }
</table>

